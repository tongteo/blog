<div class='mt-4'>
    <h3>Bài đăng của tôi</h3>

    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên</th>
                <th scope='col'>Mô tả</th>
                <th scope='col'>Video ID</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.videoId}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a
                            href='/courses/{{this.slug}}/edit'
                            class='btn btn-link'
                        >Sửa</a>
                        <a
                            href='/courses/{{this._id}}'
                            class='btn btn-link'
                        >Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>