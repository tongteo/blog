<div class='mt-4'>
    <h3>Bài đăng của tôi</h3>

    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên</th>
                <th scope='col'>Mô tả</th>
                <th scope='col'>Video ID</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.videoId}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a
                            href='/courses/{{this.slug}}/edit'
                            class='btn btn-link'
                        >Sửa</a>
                        <a
                            href=''
                            class='btn btn-link'
                            data-toggle='modal'
                            data-slug='{{this.slug}}'
                            data-target='#delete-course-modal'
                        >Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>

<div id='delete-course-modal' class='modal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Xóa bài</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Bạn chắc chắn muốn xóa bài này?</p>
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Hủy</button>
                <button
                    id='btn-delete-course'
                    type='button'
                    class='btn btn-danger'
                >Xóa bỏ</button>
            </div>
        </div>
    </div>
</div>

<form name='delete-course-form' method='POST'></form>

<script>
    document.addEventListener('DOMContentLoaded',function() { var slugName; var
    btnDeleteCourse = document.getElementById('btn-delete-course'); var
    deleteForm = document.forms['delete-course-form'];
    $('#delete-course-modal').on('show.bs.modal', function (event) { var button
    = $(event.relatedTarget); slugName = button.data('slug'); });
    btnDeleteCourse.onclick = function() { deleteForm.action = '/courses/' +
    slugName + '?_method=DELETE'; deleteForm.submit(); } });
</script>